<h1 style="font-size:4em;">エクストリームアドホック忘年会</h1>
<h2>現在 <%= Time.now.strftime("%d日 %H:%M") %></h2>
<div class="ustream">
  <% for user in @accounts %>
    <embed flashvars='viewcount=true&amp;autoplay=false&amp;brand=embed' width='160' height='130' allowfullscreen='true' allowscriptaccess='always'
    src='http://www.ustream.tv/flash/live/1/<%= user[1] %>' type='application/x-shockwave-flash' />
  <% end %>
</div>

<hr />

<table>
  <tr>
    <th>時間帯</th>
    <th>予定</th>
  </tr>
<% for plan in @plans %>
  <tr>
    <% unless plan.flag? %>
    <td style="font-size:1.6em;padding:10px;border-bottom:1px solid black;"><%=h plan.start.strftime("%d日 %H:%M～") %><%= " now!" if Time.now.strftime("%d%H") == plan.start.strftime("%d%H") %></td>
      <td style="width:420px;font-size:1.6em;padding:10px;border-bottom:1px solid black;"><%=h plan.content %></td>
      <td><%= link_to '編集', edit_plan_path(plan) %></td>
    <% else %>
      <td style="font-size:1.6em;padding:10px;border-bottom:1px solid black;color:red;"><%=h plan.start.strftime("%d日 %H:%M～") %></td>
      <td style="width:420px;font-size:1.6em;padding:10px;border-bottom:1px solid black;color:red;"><%=h plan.content %></td>
    <% end %>
  </tr>
<% end %>
</table>

<%= link_to "すべて見る", "/all" %>
